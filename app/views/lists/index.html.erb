<!-- Banner -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1517604931442-7e0c8ed2963c?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80);">
  <div class="container text-left">
    <h1>Save any kind of movies</h1>
    <p class= "m-0">
      <span id="banner-typed-text"></span>
    </p>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-success my-2'%>
  </div>
</div>
