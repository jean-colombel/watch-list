<!-- <div class="container my-3"> -->
<div class="container m-0">
  <h1 class="list-title m-3">My Lists</h1>
</div>
<div class="container lists-container">
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category rounded" style="background-image: linear-gradient(rgba(1,1,1,0.3), rgba(1,1,1,0.3)), url('<%= cl_image_path list.photo.key %>')">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>



