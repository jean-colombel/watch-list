<h1><%= @list.name %></h1>
<br>
<%= link_to 'add a movie', new_list_bookmark_path(@list) %>
<br>
<br>
<% @list.bookmarks.each_with_index do |bookmark, i| %>
  <ul>
    <li><%= "#{i}. #{bookmark.movie.title}" %></li>
    <li><%= image_tag(bookmark.movie.poster_url, width: 200, height: 200, alt: bookmark.movie.title, crop: :fill) %></li>
    <li><%= bookmark.comment %></li>
    <li><%= link_to 'Delete', bookmark_path(bookmark), method: :delete %></li>
  </ul>
<% end %>

